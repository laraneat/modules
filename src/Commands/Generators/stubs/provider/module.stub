<?php

namespace {{ namespace }};

use Laraneat\Modules\Support\ModuleServiceProvider;

class {{ class }} extends ModuleServiceProvider
{
    protected string $modulePackageName = '{{ modulePackageName }}';

    /**
     * Register services.
     */
    public function register(): void
    {
        //
    }

    /**
     * Bootstrap services.
     */
    public function boot(): void
    {
        $this->loadMigrations();
        // $this->loadTranslations();
        // $this->loadCommands();
        // $this->loadViews();
    }

    /**
     * Register migrations.
     */
    public function loadMigrations(): void
    {
        $sourcePath = realpath('{{ migrationsPath }}');
        $migrationsPath = database_path('migrations');

        $this->loadMigrationsFrom($sourcePath);

        $this->publishes([
            $sourcePath => $migrationsPath
        ], '{{ moduleNameKebabCase }}-migrations');
    }

    /**
     * Register translations.
     */
    public function loadTranslations(): void
    {
        $sourcePath = realpath('{{ langPath }}');
        $langPath = lang_path('modules/{{ modulePackageName }}');

        $this->loadTranslationsFrom($sourcePath, '{{ modulePackageName }}');

        $this->publishes([
            $sourcePath => $langPath,
        ], '{{ moduleNameKebabCase }}-translations');
    }

    /**
     * Register artisan commands.
     */
    public function loadCommands(): void
    {
        if ($this->app->runningInConsole()) {
            $this->loadCommandsFrom(realpath('{{ commandsPath }}'));
        }
    }

    /**
     * Register views.
     */
    public function loadViews(): void
    {
        $sourcePath = realpath('{{ viewsPath }}');
        $viewsPath = resource_path('views/modules/{{ modulePackageName }}');

        $this->loadViewsFrom(
            array_merge($this->getPublishableViewPaths($this->modulePackageName), [$sourcePath]),
            $this->modulePackageName
        );

        $this->publishes([
            $sourcePath => $viewsPath
        ], '{{ moduleNameKebabCase }}-views');
    }
}
